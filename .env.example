# ML Stock Scanner - Environment Configuration Template
# Copy this file to .env and fill in actual values
# NEVER commit .env files to Git!

# ===========================================
# SERVER IDENTIFICATION
# ===========================================
SERVER_ROLE=app  # Options: app, db, ml, cache
ENVIRONMENT=production
LOG_LEVEL=INFO

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=10.0.1.2
DB_PORT=5432
DB_NAME=ml_stock_scanner
DB_USER=mlscanner
DB_PASSWORD=your_secure_password_here

# PgBouncer (Connection Pooling)
PGBOUNCER_HOST=10.0.1.2
PGBOUNCER_PORT=6432

# Read-only user (for reporting/analytics)
DB_USER_RO=mlscanner_ro
DB_PASSWORD_RO=your_ro_password_here

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=10.0.1.4
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# CELERY CONFIGURATION
# ===========================================
CELERY_BROKER_URL=redis://:your_redis_password@10.0.1.4:6379/0
CELERY_RESULT_BACKEND=redis://:your_redis_password@10.0.1.4:6379/1
CELERY_TIMEZONE=America/New_York

# ===========================================
# API KEYS (Add when available)
# ===========================================
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
NEWS_API_KEY=
FINNHUB_API_KEY=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
SECRET_KEY=generate_a_long_random_secret_key_here
API_KEY_HASH=your_hashed_api_key
ALLOWED_HOSTS=*

# ===========================================
# MONITORING (Optional)
# ===========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
FLOWER_PORT=5555
